<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Current Time Based on Public IP</title>
</head>
<body>
    <h1>Current Time</h1>
    <button id="getTimeButton">Get Current Time</button>
    <p id="timeDisplay"></p>

    <script>
        document.getElementById('getTimeButton').addEventListener('click', async () => {
            try {
                const response = await fetch('https://worldtimeapi.org/api/ip');
                const data = await response.json();
                const time = data.datetime;
                document.getElementById('timeDisplay').innerText = `Current Time: ${time}`;
            } catch (error) {
                console.error('Error fetching time:', error);
                document.getElementById('timeDisplay').innerText = 'Failed to fetch time.';
            }
        });
    </script>
</body>
</html>
