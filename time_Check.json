{
  "html": "<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Date and Time Display</title>\n    <style>\n        body {\n            font-family: Arial, sans-serif;\n            text-align: left; /* Aligns text to the left */\n            margin: 50px; /* Added margin for better spacing */\n        }\n        #datetime {\n            font-size: 18px;\n            margin: 20px;\n            white-space: pre-wrap; /* Allows for formatting to show correctly */\n        }\n    </style>\n</head>\n<body>\n\n    <button id=\"togglePrettyPrint\">Toggle Pretty Print</button>\n    <div id=\"datetime\"></div>\n    <script>\n        let prettyPrintEnabled = true; // Default to pretty print\n\n        function getDateTimeInfo() {\n            const now = new Date();\n            const utcOffset = '+06:00'; // Adjust as needed\n            const timezone = 'Asia/Dhaka';\n            const dayOfWeek = now.getUTCDay();\n            const dayOfYear = Math.floor((now - new Date(now.getFullYear(), 0, 0)) / 1000 / 60 / 60 / 24);\n            const formattedDate = now.toISOString();\n            const utcDateTime = now.toISOString(); // Use the same date for UTC\n            const unixTime = Math.floor(now.getTime() / 1000);\n            const rawOffset = 21600; // Offset in seconds (6 hours)\n            const weekNumber = Math.ceil((dayOfYear + new Date(now.getFullYear(), 0, 1).getDay()) / 7);\n            const dst = false; // Adjust as needed\n            const abbreviation = '+06'; // Adjust as needed\n            const dstOffset = 0; // Adjust as needed\n            const clientIp = '114.130.67.207'; // Placeholder for client IP\n\n            const data = {\n                utc_offset: utcOffset,\n                timezone: timezone,\n                day_of_week: dayOfWeek,\n                day_of_year: dayOfYear,\n                datetime: formattedDate,\n                utc_datetime: utcDateTime,\n                unixtime: unixTime,\n                raw_offset: rawOffset,\n                week_number: weekNumber,\n                dst: dst,\n                abbreviation: abbreviation,\n                dst_offset: dstOffset,\n                dst_from: null,\n                dst_until: null,\n                client_ip: clientIp\n            };\n\n            // Display JSON based on pretty print setting\n            document.getElementById('datetime').textContent = \n                prettyPrintEnabled ? JSON.stringify(data, null, 2) : JSON.stringify(data);\n        }\n\n        // Function to toggle pretty print\n        function togglePrettyPrint() {\n            prettyPrintEnabled = !prettyPrintEnabled;\n            getDateTimeInfo(); // Refresh the displayed JSON\n        }\n\n        // Call the function to get date and time info on page load\n        getDateTimeInfo();\n\n        // Add event listener to button\n        document.getElementById('togglePrettyPrint').addEventListener('click', togglePrettyPrint);\n    </script>\n    \n</body>\n</html>"
}
